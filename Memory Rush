  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Memory Rush</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background: url('ght.jpg') no-repeat center center fixed;
      background-size: cover;
      flex-direction: column;
      color: white;
      background-color: black;
    }
    .game-container {
      display: grid;
      grid-template-columns: repeat(4, 100px);
      grid-template-rows: repeat(4, 100px);
      gap: 10px;
      justify-items: center;
      margin-bottom: 20px;
    }
    .card {
      width: 90px;
      height: 90px;
      background-color: black;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      cursor: pointer;
      transform: scale(1);
      transition: transform 0.3s, background-color 0.3s, box-shadow 0.3s;
      box-shadow: 0px 0px 25px red;
    }
    .card img {
      display: none;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
    }
    .card.flipped img {
      display: block;
    }
    .card.flipped {
      background-color: transparent;
      transform: scale(1.1);
    }
    .message, .percentage, .timer, .level {
      font-size: 20px;
      font-weight: bold;
      text-align: center;
      text-shadow: 0px 0px 10px white;
    }
    .percentage {
      margin-top: 20px;
      color: white;
    }
    .button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #5a0900;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 20px;
    }
    .button:hover {
      background-color: #2e2e2e;
      box-shadow: 0px 0px 10px white;
      position: relative;
      top: -12px;
    }
    .level {
      font-size: 20px;
      color: white;
      margin-top: 20px;
    }
    .timer {
      font-size: 20px;
      font-weight: bold;
      margin-top: 10px;
      color: white;
    }
    @media (max-width: 600px) {
      .game-container {
